                                <button type="submit" class="btn btn-danger form-control" style="height: 50px;">Add to Cart</button>
                                <input type="text" value="<%=data[0].itemid%>" style="visibility: hidden;" id = "item" name="item">
                            </form>
                        </div>
                        <div class="col">
                            <form method="POST" id="myForm1" action="">
