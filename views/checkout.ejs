                                    document.getElementById('compare').disabled = true;
                                    document.getElementById('count').innerHTML='('+localStorage.count+')'; 
                                    document.getElementById('myForm1').action = 'compareitem?id='+localStorage.citem;
                                    return false;
                                })();return false;" style="height: 50px;">Compare</button>
